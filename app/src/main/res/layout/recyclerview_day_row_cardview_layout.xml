<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    card_view:cardElevation="4dp"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Today" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/darker_gray" />

        <android.support.v7.widget.GridLayout xmlns:grid="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hourlyWeatherGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            grid:columnCount="4"
            grid:rowCount="6" >

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

            <include
                layout="@layout/recyclerview_hour_row_cardview_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
